{
  "manifest_version": 3,
  "name": "WordGet - Vocabulary Notebook",
  "version": "2.0.0",
  "description": "智能单词本：选中单词即可保存，自动翻译并提取例句，支持即时翻译显示",
  "permissions": [
    "storage",
    "activeTab",
    "sidePanel",
    "contextMenus",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"],
      "all_frames": true
    }
  ],
  "side_panel": {
    "default_path": "sidebar.html"
  },
  "action": {
    "default_title": "WordGet",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "save-word": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "保存选中的单词到单词本"
    },
    "translate-word": {
      "suggested_key": {
        "default": "Ctrl+Q",
        "mac": "Command+Q"
      },
      "description": "在鼠标位置显示选中文本的翻译"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["modules/*.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
